<div class='container portfolio-container'>
  <div class ='row'>
    <div class='col-md-7'>
      <%= image_tag portfolioImg(@portfolio_item.main_image, 'main'), width: '100%' %>
    </div>
    <div class='col-md-5'>
      <h1><%= @portfolio_item.title %></h1>
      <em><%= @portfolio_item.subtitle %></em>
      <hr>
      <p><%= @portfolio_item.body %></p>
      <h3>Technologies used:</h3>
      <hr>
      <% @portfolio_item.technologies.each do|x| %>
      <p><%= x.name %></p>
      <% end %>
      
      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to 'Edit', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>